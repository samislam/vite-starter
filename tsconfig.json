{
  "include": [
    "**/*",
    "vite.config.ts",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "moduleResolution": "bundler",
    "types": ["node", "vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "@/*": ["./src/*"],
      "#/+types/*": ["./.react-router/types/src/+types/*"],
      "#/routes/+types/*": ["./.react-router/types/src/routes/+types/*"]
    }
  }
}
